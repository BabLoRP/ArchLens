{
  "configurations": {
    "(1) Debug core": {
      "adapter": "debugpy",
      "configuration": {
        "type": "python",
        "request": "launch",
        "program": "src/core.py",
        "cwd": "${workspaceRoot}",
        "python": "/usr/sbin/python",
        "env": {
          "PYTHONPATH": "${workspaceRoot}"
        }
      }
    },
    "(2) Debug cli render": {
      "adapter": "debugpy",
      "configuration": {
        "type": "python",
        "request": "launch",
        "program": "src/cli_interface.py",
        "cwd": "${workspaceRoot}",
        "python": "/usr/sbin/python",
        "env": {
          "PYTHONPATH": "${workspaceRoot}"
        },
        "args": ["render", "test_config.py"]
      }
    },
    "(3) Debug cli validate": {
      "adapter": "debugpy",
      "configuration": {
        "type": "python",
        "request": "launch",
        "program": "src/cli_interface.py",
        "cwd": "${workspaceRoot}",
        "python": "/usr/sbin/python",
        "env": {
          "PYTHONPATH": "${workspaceRoot}"
        },
        "args": ["validate", "test_config.py"]
      }
    }
  }
}
