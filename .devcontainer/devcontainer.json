{
	"name": "MT-diagrams",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"streetsidesoftware.code-spell-checker",
				"cschleiden.vscode-github-actions"
			]
		}
	},
	"postCreateCommand": "source ./.devcontainer/postCreateScript.sh",
	"runArgs": [
		"--name",
		"MT-diagrams"
	]
}