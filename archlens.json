{
    "$schema": "https://raw.githubusercontent.com/BabLoRP/ArchLens/master/src/python/config.schema.json",
    "name": "Archlens",
    "rootFolder": "src/c-sharp/",
    "github": {
        "url": "https://github.com/BabLoRP/ArchLens",
        "branch": "main"
    },
    "snapshotDir": ".archlens",
    "snapshotFile": "snaphot",
    "saveLocation": "/diagrams/",
    "exclusions": [
        "obj/",
        "bin/",
        ".vs/",
        ".git/",
        ".idea/",
        ".archlens"
    ],
    "fileExtensions": [
        ".cs"
    ],
    "views": {
        "completeView": {
            "packages": [],
            "ignorePackages": [
                ".idea/",
                ".archlens"
            ]
        },
        "infraView": {
            "packages": [
                {
                    "path": "Infra",
                    "depth": 1
                }
            ],
            "ignorePackages": []
        },
        "infraDomainView": {
            "packages": [
                {
                    "path": "Infra",
                    "depth": 1
                },
                {
                    "path": "Domain",
                    "depth": 1
                }
            ],
            "ignorePackages": []
        }
    }
}